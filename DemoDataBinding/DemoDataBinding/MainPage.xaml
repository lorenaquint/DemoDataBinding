                Text="Enviar"></Button>
    </StackLayout>-->
        <Grid BindingContext="{Binding Source={StaticResource datos1}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListView  x:Name="lstPersonas"
                       ItemsSource="{Binding Personas}"
                      SelectedItem="{Binding PerSeleccion,Mode=TwoWay}"
                     />
            <StackLayout Grid.Row="1"
                         BindingContext="{Binding PerSeleccion}"
                         HorizontalOptions="Center">
                <Label Text="{Binding Nombre, Mode=TwoWay}"
                       TextColor="Black"/>
                <Label Text="{Binding Pais,Mode=TwoWay}"/>

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
